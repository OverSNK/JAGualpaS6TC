<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="JAGualpaS6TC.Views.vAgregarVenta"
             Title="vAgregarVenta">
    <VerticalStackLayout>
        <Label Text="AÑADIR VENTA"
            VerticalOptions="Center"
            HorizontalOptions="Center" />
            <Entry x:Name="txtIdventa" Placeholder="ID Venta" />
            <Entry x:Name="txtIdcliente" Placeholder="ID Cliente" />
            <Entry x:Name="txtIdproducto" Placeholder="ID Producto" />
            <Entry x:Name="txtFecha" Placeholder="Fecha" />
            <Entry x:Name="txtDescripcion" Placeholder="Descripción" />
            <Entry x:Name="txtCantidad" Placeholder="Cantidad" />
            <Entry x:Name="txtPrecio" Placeholder="Precio" />
            <Button x:Name ="btnAddVenta"  Text="Añadir Estudiante" 
        Clicked="btnAddVenta_Clicked"
        BackgroundColor="Green"
        TextColor="White"/>
    </VerticalStackLayout>
</ContentPage>